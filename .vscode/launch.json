    "version": "0.2.0",
    "configurations": [
        {
            "type": "node-terminal",
            "name": "Run frontend dev server",
            "request": "launch",
            "cwd": "${workspaceFolder}/frontend",
            "command": "npm run dev"
        },
        {
            "request": "launch",
            "name": "Launch Program",
            "type": "node",
            "program": "${workspaceFolder}/main.ts",
            "cwd": "${workspaceFolder}",
            "env": {},
            "runtimeExecutable": "deno",
            "runtimeArgs": [
                "run",
                "--unstable",
                "--inspect-brk",
                "--allow-all"
            ],
            "attachSimplePort": 9229
        }
    ]
}